div.dialog.prompt(ng-show="topMenu.activeLink === '1'")
  form(ng-submit='topMenu.installPackage(topMenu.packageName, topMenu.newPackageKind)')
    input(placeholder='Package name',
      type='text',
      ng-model='topMenu.packageName')
    = " "
    input(placeholder='@version',
      type='text',
      ng-model='topMenu.newPackageVersion')
    = " "
    input(type="checkbox", ng-model='topMenu.newPackageKind')
    = " "
    = " "
    | dev
    = " "
    button
      span OK
    = " "
    = " "
    i(class="fa fa-times-circle-o", ng-click="topMenu.activeLink = undefined")
