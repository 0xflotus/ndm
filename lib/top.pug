.container.top-menu.bg-gradient-grey(ng-controller='TopMenuController as topMenu')
  .row
    .col-xs-3
      a.pull-left(ng-click='shell.updateNpm()')
        i.fa.fa-history
        div
        | Update npm
    .col-xs-9
      a(ng-click="shell.openChooser()")
        i.fa.fa-plus-circle
        | Add Project
      a.pull-right.install
        i.fa.fa-cloud-download
        div
        | Install Package
      span(ng-show='shell.showMenuButtons')
        a.pull-right(ng-click='topMenu.updatePackage(shell.currentSelectedPackage)')
          i.fa.fa-level-up
          div
          | Update
        a.pull-right(ng-click='topMenu.installLatest(shell.currentSelectedPackage)')
          i.fa.fa-at
          div
          | Install latest release
        a.pull-right(ng-click='topMenu.installVersionPackage(shell.currentSelectedPackage)')
          i.fa.fa-at
          div
          | Install release
        a.pull-right(ng-click='topMenu.uninstallPackage(shell.currentSelectedPackage)')
          i.fa.fa-remove
          div
          | Uninstall
